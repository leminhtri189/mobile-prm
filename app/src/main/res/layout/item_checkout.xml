<?xml version="1.0" encoding="utf-8"?>
<!-- Checkout Item Layout -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/checkoutImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_profile_placeholder"
            android:contentDescription="Product Image"
            android:clipToOutline="true"
            android:backgroundTint="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/checkoutName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accessory Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/checkoutSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size: 7"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/checkoutQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty: 2"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/checkoutPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: $999.99"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
